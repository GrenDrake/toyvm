.export start

some_bytes:
    .byte 1 2 3 4
    .zero 20
a_short:
    .short 256
a_word:
    .word 1000000
hello_msg:
    .string "Hello world!"

    .include "glk.a"

start:
    pushw    hello_msg
    saystr
    pushb    10
    saychar

    pushb    10
loop:
    stkdup
    saynum
    pushb    32
    saychar
    pushb    1
    sub
    stkdup
    pushw    loop
    jnz
    pushb    10
    saychar

    pushw    some_bytes
    readb
    saynum
    pushb    10
    saychar
    pushw    a_short
    reads
    saynum
    pushb    10
    saychar
    pushw    a_word
    readw
    saynum
    pushb    10
    saychar

    exit
